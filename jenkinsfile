pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ansh8898/https://github.com/ansh8898/Contact-Management-System.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            when {
                branch 'master'
            }
            steps {
                sh 'mvn deploy'
            }
        }
    }
}
