pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the GitHub repository
                git branch: 'main', url: 'https://github.com/ansh8898/Contact-Management-System.git'
            }
        }

        stage('Build') {
            steps {
                // Assuming Maven is used for building
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Assuming Maven is used for testing
                sh 'mvn test'
            }
        }

        // Add more stages as needed, such as deployment or additional testing stages
    }

    // Post-build actions
    post {
        always {
            // Cleanup steps or notifications
        }
    }
}
