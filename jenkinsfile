stages {
    stage('Checkout') {
        steps {
            git 'https://github.com/ansh8898/Contact-Management-System.git'
        }
    }

    stage('Build') {
        steps {
            sh 'mvn clean install'
        }
    }

    stage('Test') {
        steps {
            sh 'mvn test'
        }
    }

    stage('Deploy') {
        steps {
            echo 'Deploying to production server...'
            // Add your deployment steps here
        }
    }
}
